---
import ExpensesChart from '../components/ExpensesChart';
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;700&display=swap"
      rel="stylesheet"
    />
    <title>Expenses Chart by @marceloag</title>
  </head>
  <body class="bg-cream flex justify-center items-center min-h-screen">
    <main class="lg:w-4/12 md:6/12 w-11/12 flex flex-col gap-5">
      <header class="bg-softred rounded-2xl p-6 flex flex-row justify-between">
        <div class="flex flex-col">
          <h4 class="text-white font-medium">My balance</h4>
          <span class="text-white text-2xl">$921.48</span>
        </div>
        <figure>
          <svg
            width="72"
            height="48"
            viewBox="0 0 72 48"
            xmlns="http://www.w3.org/2000/svg"
            ><g fill="none" fill-rule="evenodd"
              ><circle fill="#382314" cx="48" cy="24" r="24"></circle><circle
                stroke="#FFF"
                stroke-width="2"
                cx="24"
                cy="24"
                r="23"></circle>
            </g>
          </svg>
        </figure>
      </header>
      <!-- Chart -->
      <div class="bg-paleorange rounded-2xl p-6 shadow-xl">
        <h1 class="text-2xl font-bold text-darkbrown">Spending - Last 7 days</h1>
        <!-- Chart -->
        <section class="my-5">
          <ExpensesChart client:load />
        </section>
        <!--  -->
        <hr class="bg-transparent border-cream" />
        <section class="py-3 flex flex-row justify-between items-end">
          <div class="flex-col flex gap-2">
            <span class="text-sm text-mediumbrown">Total this month</span>
            <span class="font-bold text-4xl">$478.33</span>
          </div>
          <div class="text-right flex flex-col">
            <span class="font-bold mb-0">+2.4%</span>
            <span class="text-mediumbrown mb-0">from last month</span>
          </div>
        </section>
      </div>
    </main>
  </body>
</html>
